<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cartProductMainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/cartProductImg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic"
                android:layout_width="120dp"
                android:layout_height="80dp" />

            <TextView
                android:id="@+id/cartProductName"
                app:layout_constraintStart_toEndOf="@+id/cartProductImg"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="Product Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cartProductQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/cartProductName" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Quantity: "
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/cartProductImg"
                app:layout_constraintTop_toBottomOf="@+id/cartProductName" />

            <ImageButton
                android:id="@+id/increaseItemBtn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:backgroundTint="#65E66A"
                app:layout_constraintEnd_toStartOf="@+id/decreaseItemBtn"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/cross_icon" />

            <ImageButton
                android:id="@+id/decreaseItemBtn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:backgroundTint="#EDF357"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/line_icon" />

            <ImageButton
                android:id="@+id/removeItemBtn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#F44336"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/decreaseItemBtn"
                app:srcCompat="@drawable/close_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>